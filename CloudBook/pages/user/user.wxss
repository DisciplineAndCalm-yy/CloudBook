/* pages/user/user.wxss */

.user .user-main {
  width: 100%;
  height: 400rpx;
  display: flex;
  flex-direction: column;
  background: #ccc;
}

.user-main .user-t {
  padding: 20rpx 80rpx;
  height: 300rpx;
  display: flex;
  justify-content: space-between;
  text-align: center;
  align-items: center;
}

.user-t .user-msg{
  font-size: 16px;
}

.user-msg .sdf{
  margin-top: 30rpx;
  margin-left: 30rpx;
}

.user-main .user-b {
  padding: 0 120rpx;
  display: flex;
  justify-content: space-between;
  height: 100rpx;
}

.user-main .user-t .img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 160rpx;
}

.user-main .user-b .userfont {
  font-size: 14px;
}

.user-b .collect {
  display: flex;
  flex-direction: row;
}

.user-b .attention {
  display: flex;
  flex-direction: row;
}

.programmer-say{
  width: 100%;
  height: 280rpx;
}

.programmer-say .conten{
  background: #f2f2f2;
}

.feedback{
  width: 100%;
  height: 360rpx;
}

.feedback .feedback-write{
  width: 100%;
  height: 300rpx;
  border: 1px solid #ccc;
}

.feedback .btn{
  width: 700rpx;
  height: 100rpx;
  text-align: center;
  align-items: center;
}